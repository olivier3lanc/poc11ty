<!-- PAGE METADATA -->
<title>{{ cms_model[cms_page.language].title }}</title>
<meta name="description" content="{{ cms_model[cms_page.language].description }}">

<meta itemprop="name" content="{{ cms_model[cms_page.language].title }}">
<meta name="description" itemprop="description" content="{{ cms_model[cms_page.language].description }}">
<meta name="application-name" content="{{ cms_model[cms_page.language].title }}">

<!-- Microsoft -->
<meta http-equiv="x-ua-compatible" content="ie=edge">
<meta name="msapplication-tooltip" content="{{ cms_model[cms_page.language].title }}">

<!-- Open Graph -->
<meta property="og:type" content="website">
<meta property="og:title" content="{{ cms_model[cms_page.language].title }}">
<meta property="og:description" content="{{ cms_model[cms_page.language].description }}">
<meta property="og:image" content="{{ cms_model[cms_page.language].image }}">

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:title" content="{{ cms_model[cms_page.language].title }}">
<meta name="twitter:description" content="{{ cms_model[cms_page.language].description }}">
<meta name="twitter:image" content="{{ cms_model[cms_page.language].image }}">

<!-- iOS -->
<meta name="apple-mobile-web-app-title" content="{{ cms_model[cms_page.language].title }}">
<meta name="apple-mobile-web-app-capable" content="yes">

<!-- Android -->
<meta name="color-scheme" content="light">
<meta name="mobile-web-app-capable" content="yes">
